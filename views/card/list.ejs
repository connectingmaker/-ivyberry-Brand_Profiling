<div id="app">
    <div class="row">
        <div class="col-xs-3">
            <div class="block block-themed"  style="border-radius:5px;">
                <div class="block-header bg-primary" style="border-radius:5px;">

                    <h3 class="block-title">카테고리</h3>
                </div>
                <div class="block-content">
                    <ul class="list list-activity push">
                        <li style="margin-bottom:10px; padding-bottom: 10px;" v-for="(item, index) in category">

                            <i class="si si-wallet text-success"></i>
                            <a href="#" v-on:click="cardCategorySelect(index)">
                            <div class="font-w600">{{item.CODE_CARD_CATEGORY_NAME}}</div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-xs-9">
            <div class="block block-themed" style="border-radius:5px;">
                <div class="block-header bg-primary" style="border-radius:5px;">
                    <ul class="block-options">
                        <li>
                            <button type="button" v-on:click="cardModal"><i class="fa fa-pencil"></i> 해봐라카드 등록</button>
                        </li>
                    </ul>
                    <h3 class="block-title">{{category_name}} 목록</h3>
                </div>
                <div class="block-content">
                    <div class="row" style="padding-bottom:20px;">
                        <div class="col-xs-4" v-for="(item,index) in list">
                            <div class="block" style="border-radius:5px; border:1px solid #ccc;">
                                <div class="block-content">
                                    <h3 class="text-center">{{item.CARD_TITLE}}</h3>

                                    <h6 class="text-center push-20-t">{{item.CARD_COMMAND}}</h6>
                                    <hr>

                                    <div class="col-xs-12 text-center" style="word-wrap: break-word;padding-bottom:20px;min-height:150px;">{{item.CARD_CONTENTS}}</div>


                                    <div class="text-center">
                                        <button class="btn btn-sm btn-success" v-on:click="cardModify(index)">수정</button>
                                        <button class="btn btn-sm btn-danger" v-on:click="cardDelete(index)">삭제</button>
                                    </div>
                                    <div class="text-center push-15-t">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--
        <div class="col-xs-12 bg-white box round_box">
            <div class="col-xs-3" style="padding:0px;">

            </div>

        </div>
        -->
    </div>



    <!-- 단일선택형 등록폼 모달 -->
    <div class="modal fade" id="cardModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="block block-themed block-transparent remove-margin-b">
                    <div class="block-header bg-primary-dark">
                        <ul class="block-options">
                            <li>
                                <button data-dismiss="modal" type="button"><i class="si si-close"></i></button>
                            </li>
                        </ul>
                        <h3 class="block-title">해봐라 카드 등록</h3>
                    </div>
                    <div class="block-content">
                        <form class="form-horizontal" onsubmit="return false;">

                            <div class="form-group">
                                <label class="col-xs-12" for="example-text-input">카드 코드</label>
                                <div class="col-sm-12">
                                    <input class="form-control" type="text" id="card_seq" v-model="modal.card_seq" disabled>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-xs-12" for="example-text-input">카드 타이틀명 <span style="color:#d26a5c;">*</span></label>
                                <div class="col-sm-12">
                                    <input class="form-control" type="text" id="card_title" v-model="modal.card_title" placeholder="카드 타이틀을 입력해주세요.">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-xs-12" for="example-text-input">명령문 <span style="color:#d26a5c;">*</span></label>
                                <div class="col-sm-12">
                                    <input class="form-control" type="text" id="card_command" v-model="modal.card_command" placeholder="명령문을 입력해주세요.">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-xs-12" for="example-text-input">설명 내용 <span style="color:#d26a5c;">*</span></label>
                                <div class="col-sm-12">
                                    <textarea class="form-control" type="text" id="card_contents" v-model="modal.card_contents" rows="10" placeholder="설명 내용을 입력해주세요."></textarea>
                                </div>
                            </div>

                        </form>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-sm btn-default" type="button" data-dismiss="modal">닫기</button>
                    <button class="btn btn-sm btn-danger" type="button" v-on:click="cardWrite"><i class="fa fa-check"></i> 저장</button>

                </div>
            </div>
        </div>
    </div>

</div>

<script language="javascript" src="/view_js/card/list.js"></script>
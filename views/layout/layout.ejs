<script language="javascript">
    $(function() {
        $("#adminPwd").click(function() {
            $("#adminModal").modal("show");
        });

        $("#pwdSave").click(function() {
            if($("#now_passwd").val() == false) {
                alert("현재 패스워드를 입력해주세요.");
                $("#now_passwd").focus();
                return;
            }

            if($("#reset_passwd").val() == false) {
                alert("변경할 패스워드를 입력해주세요.");
                $("#reset_passwd").focus();
                return;
            }

            if($("#reset_passwd_ok").val() == false) {
                alert("변경할 패스워드가 일치하지 않습니다.");
                $("#reset_passwd_ok").focus();
                return;
            }

            var jsonData = {
                now_passwd : $("#now_passwd").val()
                ,reset_passwd : $("#reset_passwd").val()
            }

            common.ajax.send('/users/adminPwdUpdate', jsonData);
            common.ajax.return = function(data) {
                switch (data.ERR_CODE) {
                    case "000":
                        alert("정상적으로 업데이트 되었습니다.");
                        $("#adminModal").modal("hide");
                        break;
                    default:
                        alert(data.ERR_MSG);
                        $("#now_passwd").val("");
                        $("#reset_passwd").val("");
                        $("#reset_passwd_ok").val("");``

                        break;
                }
            }
        });
        //adminModal
    });
</script>

<div class="row">
    <div class="col-xs-12 bg-white box round_box">
        <div class="row">
            <div class="col-xs-10 title">
                <h3 class="block-title">사용자 목록</h3>
            </div>
            <div class="col-xs-2 text-right">
                <a href="/users/write" class="btn btn-sm btn-danger btn-rounded">회원 추가</a>
            </div>

        </div>
        <div class="contents_list">
            <table id="list" class="table table-bordered fontsize">
                <thead>
                <tr>
                    <th>UID</th>
                    <th>등급</th>
                    <th>이름</th>
                    <th>이메일</th>
                    <th>전화번호</th>
                    <th>포인트</th>
                    <th>참여설문</th>
                    <th>최근접속</th>
                    <th>기능</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i<userData.length; i++) { %>
                <tr>
                    <td class="text-center"><a href="/users/write/<%=userData[i].UID%>" class="btn btn-xs btn-danger"><%=userData[i].UID%></a></td>
                    <td><%=userData[i].CODE_NAME%></td>
                    <td><%=userData[i].USERNAME%></td>
                    <td><%=userData[i].USEREMAIL%></td>R
                    <td><%=userData[i].USERPHONE%></td>
                    <td class="btn btn-xs btn-success historyBtn"><%=userData[i].POINT%></td>
                    <td><%=userData[i].JOIN_SURVEY_CNT%></td>
                    <td><%=moment(userData[i].LAST_LOGIN).format("YYYY-MM-DD hh:mm")%></td>
                    <td class="text-center">
                        <button class="btn btn-xs btn-warning deleteBtn">삭제</button>
                        <button class="btn btn-xs btn-primary modifyBtn"><a href="/users/write/<%=userData[i].UID%>" class="text-white" >수정</a></button>
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>

            <div class="col-xs-12 text-center">

